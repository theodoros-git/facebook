<% content_for :head do %>
  Nouvelle publication
<% end %>

<% content_for :content do %>
  <div class="container-fluid mb-12">
    <div class="row mt-40">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            Nouvelle Publication
          </div>
          <div class="card-body">

            <div class="row">
              <% if flash[:pub_errors]%>
                <% flash[:pub_errors].each do |error| %>
                  <p class="alert alert-danger"> <%=error%></p>
                <%end%>
              <%end%>
            </div>

            <%= form_with(model: @publication, url: users_newpubform_path, method: "post") do |form| %>

                <div class="form-outline mb-4">
                <%= form.label :image, "Ajouter une photo(optionnel)", class: "form-label" %>
                <%= image_tag(@publication.image.url) if @publication.image && @publication.image.url %>
                  <%= form.file_field :image, class: "form-control" %>

                </div>

                <div class="form-outline mb-4">
                    <%= form.label :content, "Publication", class: "form-label" %>
                  <%= form.text_area :content, size: "70x5", class: "form-control" %>

                </div>


              <div class="text-center">
                <%= form.submit "Publier",data: { confirm: 'Your message Here' }, class: "btn btn-success  mb-4", style: "padding-right: 50px; padding-left: 50px; font-size: 17px;" %>
              </div>
            <% end %>
            

          </div>
          <div class="card-footer">
             Cr√©er une nouvelle publication - Facebook
          </div>
        </div>
      </div>
      <div class="col-md-4">
        
      </div>  
    </div>
    
  </div>
<% end %>