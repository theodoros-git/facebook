<% content_for :head do %>
  Confirmation - Nouvelle Publication
<% end %>

<% content_for :content do %>
  <div class="container-fluid mb-12">
    <div class="row mt-40">
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            Veuillez Confirmer votre nouvelle publication.
          </div>
          <div class="card-body">
              <img src="<%= @publication.image %>">

              <p><%= @publication.content %></p>
          </div>
          <div class="card-footer">
            Confirmation - Nouvelle Publication - Facebook
          </div>
        </div>
      </div>
      <div class="col-md-3">
          <%= form_with(model: @publication, local: true, url: users_newpubconfirmform_path) do |form| %>

            <%= form.hidden_field :image %>
            <%= form.hidden_field :content %>
            <%= form.submit "Confirmer", class: "btn btn-primary" %>
          <% end %>
          
      </div>  
    </div>
    
  </div>
<% end %>